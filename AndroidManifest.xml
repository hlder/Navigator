<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0" package="com.epaybank.navigator">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:name="com.epaybank.navigator.view.NaApplication"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.epaybank.navigator.view.app.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.epaybank.navigator.view.app.MainActivity" />
        <activity android:name="com.epaybank.navigator.view.app.LoginActivity" />
        <activity android:name="com.epaybank.navigator.view.app.WebViewActivity" />
    </application>
</manifest>